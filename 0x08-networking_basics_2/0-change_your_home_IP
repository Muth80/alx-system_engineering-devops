#!/usr/bin/env bash

# This script configures an Ubuntu server with the required DNS resolutions.

# Set localhost to resolve to 127.0.0.2
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Set facebook.com to resolve to 8.8.8.8
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
